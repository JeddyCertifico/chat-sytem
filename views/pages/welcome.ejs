<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <main style="height: 100vh" class="d-flex justify-content-center align-items-center">
      <div class="container">
        <div class="row">
          <div class="col-sm-3"></div>
          <div class="form col-sm-6 p-sm-3 p-md-5 p-5 bg-white rounded">
            <h2 class="text-center">Chat Application</h2>
            <form class="form-group mt-5 text-center" method="post" action="/chat">
              <input type="text" class="form-control mb-3" id="name" name="name" placeholder="Username" required />
              <button id="submit" type="submit" name="submit" value="submit" class="btn btn-dark px-3 mb-1">Chat</button>
            </form>
            <div class="col-sm-3"></div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
